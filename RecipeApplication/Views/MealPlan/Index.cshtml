@model IEnumerable<RecipeApplication.Models.MealPlan>

@{
    ViewData["Title"] = "Meal Plans";
}

<div class="container meal-plan-list">
@if(Model.Any()){
    <h2>Meal Plans</h2>

    <table class="table border table-hover mt-4 mb-5">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@* @Html.DisplayNameFor(model => model.StartDate) *@ Start </th>
                <th>@* @Html.DisplayNameFor(model => model.EndDate) *@ End</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.StartDate) </td>
                    <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">View</a>
                      @*   <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a> *@
                    </td>
                </tr>
            }
        </tbody>
        </table>
    }
    else
    {
        <div class="text-center"> 
            <h3>No mealplans yet</h3>
        </div>
    }
             <div class="mt-3">
             <a asp-action="Create" class="btn btn-sm btn-primary">Create meal plan</a>
             </div>
</div>
